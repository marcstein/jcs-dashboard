# JCS MyCase Automation - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================================
# MyCase OAuth Credentials
# ============================================================================
MYCASE_CLIENT_ID=your_client_id
MYCASE_CLIENT_SECRET=your_client_secret
MYCASE_REDIRECT_URI=https://your-domain.com/oauth/callback

# ============================================================================
# Email - Gmail SMTP
# ============================================================================
# Create an App Password at: https://myaccount.google.com/apppasswords
# Go to: Google Account > Security > 2-Step Verification > App Passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=xxxx xxxx xxxx xxxx

# Legacy variable names (for backwards compatibility)
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=xxxx xxxx xxxx xxxx
SMTP_FROM_EMAIL=your-email@gmail.com

# ============================================================================
# Email - SendGrid (alternative to SMTP)
# ============================================================================
# Get API key at: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=

# ============================================================================
# Dunning Email Settings
# ============================================================================
# Test mode sends ALL emails to this address instead of clients
DUNNING_TEST_MODE=true
DUNNING_TEST_EMAIL=marc.stein@gmail.com
# From address for dunning notices
DUNNING_FROM_EMAIL=melissa@jcslawstl.com
DUNNING_FROM_NAME=Melissa Scarlett - JCS Law Firm

# ============================================================================
# Notifications - Slack (optional)
# ============================================================================
SLACK_WEBHOOK_URL=

# ============================================================================
# Notifications - Twilio SMS (optional)
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ============================================================================
# Dashboard Settings
# ============================================================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=3000
DASHBOARD_SECRET_KEY=change-this-to-a-random-string

# ============================================================================
# Celery + Redis (Auto-Sync Infrastructure)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_CONCURRENCY=3

# ============================================================================
# Application Settings
# ============================================================================
# Set to "production" on server
ENVIRONMENT=development
LOG_LEVEL=INFO
